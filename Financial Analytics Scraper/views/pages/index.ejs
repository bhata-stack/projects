			<script>
				var scraped_data = `<%= scraped_data %>`;
				scraped_data = scraped_data.split(",")
				scraped_data.reverse()
				var title = `<%= title_data %>`;
				var symbol = `<%= symbol %>`;
				title = symbol + ": " + title;
				if (typeof scraped_data == "object") {
					new Chart(document.getElementById("chart"), {
						type: 'line',
						data: {
							labels: [2018, 2019, 2020, 2021],
							datasets: [{ 
								data: scraped_data,
								borderColor: "#3e95cd"
							}]
						},
						options: {
							title: {
							display: true,
							text: title
							},
							legend: {
								display: false
							}
						}
						});
				}
